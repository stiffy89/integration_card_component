{
	"_version": "1.15.0",
	"sap.app": {
		"id": "ns.integration_card_component",
		"type": "card",
		"title": "Component sample card",
		"subTitle": "",
		"applicationVersion": {
			"version": "1.0.0"
		}
	},
	"sap.ui": {
		"technology": "UI5",
        "deviceTypes": {"desktop": true, "phone": true, "tablet": true},
		"icons": {
			"icon": "sap-icon://bus-public-transport"
		}
	},
	"sap.ui5": {
		"rootView": {
			"viewName": "ns.integration_card_component.App",
			"type": "XML",
			"async": true,
			"id": "app"
		},
		"dependencies": {
			"minUI5Version": "1.38",
			"libs": {
				"sap.m": {}
			}
		},
		"config": {
			"sample": {
				"stretch": true,
				"files": [
					"Card.controller.js"
				]
			}
		},
		"routing" : {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"type": "View",
				"viewType": "XML",
				"path": "ns.integration_card_component",
				"controlId": "app",
				"controlAggregation": "pages",
				"transition": "slide",
				"async": true
			},
			"routes": [
				{
					"pattern": "",
					"name": "home",
					"target": "home"
			 	},
				{
					"pattern": "detail",
					"name": "detail",
					"target": "detail"
				},
				{
					"pattern" : "detailedit",
					"name" : "detailedit",
					"target" : "detailedit"
				}
			],
			 "targets": {
				"home": {
					"id": "home",
					"name": "Home",
					"level" : 1
				},
				"detail": {
					"id": "detail",
					"name": "Detail",
					"level" : 1
				},
				"detailedit" : {
					"id" : "detailedit",
					"name" : "DetailEdit",
					"level" : 1
				}
			 }
		}
	},
	"sap.card": {
		"type": "Component",
        "designtime": "dt/configuration",
		"header": {"icon": {
				"src": "sap-icon://customer"
			},
			"title": "Customer Account",
			"subTitle": "Information for our customer"
		},
		"configuration" : {
			"destinations" : {
				"ES5" : {
					"name" : "ES5",
					"defaultUrl" : "/sap/opu/odata/sap/EPM_REF_APPS_SHOP_SRV/"
				}
			}
		}
	},
    "sap.platform.mobilecards": {
        "compatible": false
    }
}